<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/configurationTxtView"
        android:layout_width="fill_parent"
        android:layout_height="70sp"
        android:layout_marginStart="40dp"
        android:layout_weight="0"
        android:gravity="center_vertical"
        android:text="@string/configuration"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="67dp" />

    <LinearLayout
        android:id="@+id/sectInput"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#F5F4F4"
        android:orientation="vertical"
        android:paddingTop="20sp"
        android:paddingBottom="20sp">

        <LinearLayout
            android:id="@+id/sectLongCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <TextView
                android:id="@+id/txtViewLongCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="@string/longueur_du_code"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinnerLongCode"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:background="@color/white"
                android:foregroundGravity="center"
                android:gravity="center"
                android:minHeight="48dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sectNCouleurs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtViewNCouleurs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginTop="10sp"
                android:foregroundGravity="center_vertical|center|center_horizontal"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="@string/nombres_de_couleurs"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinnerNCouleurs"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginTop="10sp"
                android:background="@color/white"
                android:foregroundGravity="center_vertical|center|center_horizontal"
                android:gravity="center|center_horizontal|center_vertical"
                android:minHeight="48dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sectNTentatives"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtViewNTentatives"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginTop="10sp"
                android:foregroundGravity="center_vertical|center|center_horizontal"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="@string/nombres_de_tentatives"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinnerNTentatives"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginTop="10sp"
                android:background="@color/white"
                android:foregroundGravity="center_vertical|center|center_horizontal"
                android:gravity="center|center_horizontal|center_vertical"
                android:minHeight="48dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#F5F4F4"
        android:orientation="horizontal"
        android:paddingBottom="30sp"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <Button
                android:id="@+id/btnAnnulerConfig"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:backgroundTint="#E14242"
                android:text="@string/annuler"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSoumettreConfig"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:backgroundTint="#B8E142"
                android:text="@string/soumettre"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnHomeConfig"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/home"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/home"
            tools:ignore="NestedWeights" />

        <ImageButton
            android:id="@+id/btnGameConfig"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/game"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/games" />

        <ImageButton
            android:id="@+id/btnHistoryConfig"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/clock"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/wall_clock" />

        <ImageButton
            android:id="@+id/btnConfigConfig"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/gear"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/gear" />

    </LinearLayout>

</LinearLayout>